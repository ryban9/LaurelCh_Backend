<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".contacto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/logo_aplicativo" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="148dp"
            android:translationY="75dp"
            app:srcCompat="@drawable/user" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="294dp"
            android:layout_height="wrap_content"
            android:text="Propietario: Sr Carlos Efraín Castro Guerrero "
            android:textAlignment="viewStart"
            android:textSize="16sp"
            android:translationX="75dp"
            android:translationY="160dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="296dp"
            android:layout_height="wrap_content"
            android:text="Dirección: Barrio San Juan de Pastocalle, via Lasso frente a Lavadora de carros."
            android:textAlignment="viewStart"
            android:textSize="16sp"
            android:translationX="75dp"
            android:translationY="180dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="294dp"
            android:layout_height="wrap_content"
            android:text="Teléfono: 0999122940"
            android:textAlignment="viewStart"
            android:textSize="16sp"
            android:translationX="75dp"
            android:translationY="200dp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>